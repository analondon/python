import Classes
from Classes import Project, Person
import Utils


def main_menu():
    print("""

    Welcome to Split-It

            About            (A)
            Create Project   (C)
            Enter Votes      (V)
            Show Project     (S)
            Quit             (Q)

        """)

#gets input from user, converts into uppercase to be compared with the option in condfun()
def actioninput():
    actioninput.action = input('            Please choose an option and press <Enter>: ').lower();

def condfun():
    if actioninput.action == 'a' :
        Utils.func_a()

    elif actioninput.action == 'c' :
        Project.set_project()

    elif actioninput.action == 'v':
        Project.get_votes()

    elif actioninput.action == 's':
        Project.func_s()

    elif actioninput.action == 'q':
        exit()

    else:
        Utils.func_error()
        pass

while __name__ == '__main__':
    main_menu()
    actioninput()
    condfun()
